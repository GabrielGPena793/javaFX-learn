    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

   <Label text="Calculate Sum" />
   <TextField fx:id="txtNumber1" alignment="CENTER" promptText="First Number" />
   <TextField fx:id="txtNumber2" alignment="CENTER" promptText="Secound Number" />
   <Button fx:id="btSum" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
   <Label fx:id="labelResult" text="Result" />
</VBox>
